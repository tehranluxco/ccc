<?xml version='1.0' encoding='utf-8'?>
<widget id="com.tehranlux.app" version="0.0.1">
    <name>Tehranlux</name>
    <author email="dev@callback.apache.org" href="https://tehranlux.com">
        Tehranlux Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <access origin="https://tehranlux.com" subdomains="true" />
    <preference name="phonegap-version" value="3.5.0" />
    <preference name="permissions" value="none" />
    <feature name="http://api.phonegap.com/1.0/network" />
	<platform name="android">
    <icon src="icon.png" />
		<preference name="android-minSdkVersion" value="14" />
		<icon density="ldpi" src="res/icon/android/icon-36-ldpi.png" />
		<icon density="mdpi" src="res/icon/android/icon-48-mdpi.png" />
		<icon density="hdpi" src="res/icon/android/icon-72-hdpi.png" />
		<icon density="xhdpi" src="res/icon/android/icon-96-xhdpi.png" />
		<splash  qualifier="port-ldpi" src="res/screen/android/screen-ldpi-portrait.png" />
		<splash  qualifier="port-mdpi" src="res/screen/android/screen-mdpi-portrait.png" />
		<splash  qualifier="port-hdpi" src="res/screen/android/screen-hdpi-portrait.png" />
		<splash  qualifier="port-xhdpi" src="res/screen/android/screen-xhdpi-portrait.png" />
	</platform>
	
	<platform name="ios">
		<icon height="57" src="res/icon/ios/icon-57.png" width="57" />
		<icon height="72" src="res/icon/ios/icon-72.png" width="72" />
		<icon height="114" src="res/icon/ios/icon-57-2x.png" width="114" />
		<icon height="144" src="res/icon/ios/icon-72-2x.png" width="144" />
		<splash height="480" src="res/screen/ios/screen-iphone-portrait.png" width="320" />
		<splash height="960" src="res/screen/ios/screen-iphone-portrait-2x.png" width="640" />
		<splash height="1136" src="res/screen/ios/screen-iphone-portrait-568h-2x.png" width="640" />
		<splash height="1024" src="res/screen/ios/screen-ipad-portrait.png" width="768" />
		<splash height="768" src="res/screen/ios/screen-ipad-landscape.png" width="1024" />
	</platform>

